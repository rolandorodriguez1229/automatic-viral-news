rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - only authenticated users can read their own data
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Trending topics - read by authenticated users, write only by functions
    match /trending_topics/{topicId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Content performance - read by authenticated users
    match /content_performance/{performanceId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Learning insights - read by authenticated users
    match /learning_insights/{insightId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Prompt templates - read by authenticated users, admin can write
    match /prompt_templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Task queue - read by authenticated users
    match /task_queue/{taskId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Service quotas - read by authenticated users
    match /service_quotas/{serviceId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Quota analytics - read by authenticated users
    match /quota_analytics/{analyticsId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Content approvals - authenticated users can read, admin can write
    match /content_approvals/{approvalId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}

